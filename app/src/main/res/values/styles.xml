<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <!-- *********************************************************************
                                Top display root
        **********************************************************************-->
    <style name="top_display_root">
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/colorWhite</item>
    </style>

    <!-- top text style -->
    <style name="team_text" parent="top_display_root">
        <item name="android:paddingBottom">@dimen/team_text_padding_bottom</item>
        <item name="android:paddingTop">@dimen/team_text_padding_top</item>
        <item name="android:textSize">@dimen/team_text_text_size</item>
    </style>

    <!-- score display style -->
    <style name="score_style" parent="top_display_root">
        <item name="android:textSize">@dimen/team_score_text_size</item>
    </style>

    <!-- *********************************************************************
                                Card display root
        **********************************************************************-->
    <style name="card_display_root">
        <item name="android:padding">@dimen/card_display_padding</item>
        <item name="android:textColor">@color/colorBlack</item>
        <item name="android:layout_marginTop">@dimen/card_display_margin_top</item>
        <item name="android:layout_marginBottom">@dimen/card_display_margin_bottom</item>
    </style>

    <!-- yellow card display text -->
    <style name="yellow_card_display_text" parent="card_display_root">
        <item name="android:layout_marginLeft">@dimen/card_display_margin_left</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <!-- yellow card display number -->
    <style name="yellow_card_display_number" parent="card_display_root">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/card_display_margin_right</item>
        <item name="android:background">@color/yellow</item>
    </style>

    <!-- red card display text -->
    <style name="red_card_display_text" parent="card_display_root">
        <item name="android:layout_marginLeft">@dimen/card_display_margin_left</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- red card display number -->
    <style name="red_card_display_number" parent="card_display_root">
        <item name="android:textStyle">bold</item>
        <item name="android:layout_marginRight">@dimen/card_display_margin_right</item>
        <item name="android:background">@color/red</item>
    </style>

    <!-- *********************************************************************
                                    Button style
            **********************************************************************-->
    <style name="button_style_root">
        <item name="android:textAlignment">center</item>
        <item name="android:layout_marginLeft">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginRight">@dimen/button_margin_horizontal</item>
        <item name="android:layout_marginBottom">@dimen/button_margin_bottom</item>
    </style>

    <!-- reset button style -->
    <style name="reset_button">
        <item name="android:layout_alignParentBottom">true</item>
        <item name="android:layout_centerHorizontal">true</item>
        <item name="android:layout_marginTop">@dimen/button_margin_top</item>
    </style>
</resources>
